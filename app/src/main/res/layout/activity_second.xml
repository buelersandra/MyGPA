<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bueler.mygpa.Second"
    android:visibility="visible"
    android:id="@+id/second">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_courseNum"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Enter the number of courses" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRADE"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText_courseNum"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREDIT HOURS"
        android:id="@+id/textView3"
        android:layout_below="@+id/editText_courseNum"
        android:layout_toEndOf="@+id/editText_courseNum" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_H1"
        android:layout_column="6"
        android:layout_alignEnd="@+id/textView3"
        android:enabled="false"
        android:layout_below="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_H3"
        android:layout_column="6"
        android:layout_below="@+id/editText_H2"
        android:layout_alignStart="@+id/editText_H2"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_H2"
        android:layout_column="6"
        android:layout_below="@+id/editText_H1"
        android:layout_alignStart="@+id/editText_H1"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_H4"
        android:layout_column="6"
        android:layout_below="@+id/editText_H3"
        android:layout_alignStart="@+id/editText_H3"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_H5"
        android:layout_column="6"
        android:layout_below="@+id/editText_H4"
        android:layout_alignStart="@+id/editText_H4"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_H6"
        android:layout_column="0"
        android:layout_below="@+id/editText_H5"
        android:layout_alignStart="@+id/editText_H5"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/editText_H7"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_H6"
        android:layout_alignParentEnd="true"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_G1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_G2"
        android:layout_below="@+id/editText_G4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_G3"
        android:layout_below="@+id/editText_G1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_G4"
        android:layout_below="@+id/editText_G3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_G5"
        android:layout_below="@+id/editText_G2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_G6"
        android:layout_above="@+id/editText_H7"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_G7"
        android:layout_alignTop="@+id/editText_H7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_displayGPA2"
        android:textColor="#ffff12eb"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView3"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
