<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bueler.mygpa.gimpaActivity"
    android:id="@+id/gimpa">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_courseNum"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter number of courses:"
        android:numeric="integer"
        android:singleLine="true"
        android:inputType="number"
        android:imeOptions="actionNext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRADE"
        android:id="@+id/textView_grade"
        android:layout_below="@+id/editText_courseNum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="#1d10ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREDIT HOURS"
        android:id="@+id/textView_chrs"
        android:layout_alignTop="@+id/textView_grade"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textColor="#1219ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        android:id="@+id/button_calculate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_displayGPA1"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_alignStart="@+id/button_calculate"
        android:layout_toStartOf="@+id/textView_chrs" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g1"
        android:layout_below="@+id/textView_grade"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h1"
        android:layout_alignBottom="@+id/g1"
        android:singleLine="true"
        android:inputType="number"
        android:layout_alignParentEnd="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g2"
        android:singleLine="true"
        android:layout_below="@+id/g1"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h3"
        android:singleLine="true"
        android:inputType="number"
        android:layout_below="@+id/g2"
        android:layout_alignStart="@+id/h2" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h2"
        android:singleLine="true"
        android:inputType="number"
        android:layout_above="@+id/h3"
        android:layout_alignStart="@+id/h1" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g3"
        android:singleLine="true"
        android:layout_alignTop="@+id/h3"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g4"
        android:singleLine="true"
        android:layout_below="@+id/g3"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h4"
        android:singleLine="true"
        android:inputType="number"
        android:layout_above="@+id/g5"
        android:layout_alignStart="@+id/h3" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g5"
        android:singleLine="true"
        android:layout_below="@+id/g4"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g6"
        android:singleLine="true"
        android:layout_below="@+id/g5"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h5"
        android:singleLine="true"
        android:inputType="number"
        android:layout_below="@+id/h4"
        android:layout_alignStart="@+id/h4" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h6"
        android:singleLine="true"
        android:inputType="number"
        android:layout_alignStart="@+id/h5"
        android:layout_below="@+id/g5" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/g6"
        android:singleLine="true"
        android:layout_alignParentStart="true"
        android:id="@+id/g7" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h7"
        android:singleLine="true"
        android:inputType="number"
        android:layout_below="@+id/h6"
        android:layout_alignStart="@+id/h6" />

</RelativeLayout>
